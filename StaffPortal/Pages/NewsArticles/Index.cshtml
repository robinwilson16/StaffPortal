                @Html.DisplayNameFor(model => model.News[0].NewsClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News[0].IconID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News[0].IconPath)
            </th>
