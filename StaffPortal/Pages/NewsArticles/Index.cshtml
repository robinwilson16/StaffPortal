                @Html.DisplayFor(modelItem => item.MainText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IconID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IconPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumComments)
