                @Html.DisplayNameFor(model => model.News[0].CreatedByEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.News) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
